nm-applet&
cbatticon -l 15 -r 3&

xidlehook \
  --not-when-fullscreen \
  --timer 580 \
    'light -S 30' \
    'light -S 100' \
  --timer 20 \
    'i3lock' \
    'light -S 100' \
  `# Finally, suspend an hour after it locks` \
  --timer 3600 \
    'systemctl suspend' \
    '' &

xss-lock 'i3lock'&
(sleep 2 && xrandr --auto)&
